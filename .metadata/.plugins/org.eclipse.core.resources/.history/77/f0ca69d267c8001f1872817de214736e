import com.jsf.dao.PostDAO;
import com.jsf.entities.Post;
import com.jsf.entities.User;
import com.jsf.dao.UserDAO;

@Named
@RequestScoped
public class Index{
	private static final String PAGE_LOGIN = "/pages/auth/login?faces-redirect=true";
	
	private String body;
	
	private int firstRow = 0;
    private static final int ITEMS_PER_PAGE = 20;
    
    private List<Post> posts;
	
	@EJB
	PostDAO postDAO;
	
	@PostConstruct
    public void init() {
        loadMorePosts();
    }
	
	public void loadMorePosts() {
		User loggedUser = ServerClient.getLoggedUser();
		
		List<Post> list = null;
		
		//1. Prepare search params
		Map<String,Object> searchParams = new HashMap<String, Object>();
		
		if (body != null && body.length() > 0){
			searchParams.put("body", body);
		}
		
		if(loggedUser != null) {
			searchParams.put("feed", loggedUser.getId());
		}
		
		//2. Get list
		list = postDAO.getList(searchParams);
	}
	
	public List<Post> getPosts(){
		return posts;
	}
	
	public String login() {
		return PAGE_LOGIN;
	}
	
	public String getBody() {
		return body;
	}
	public void setBody(String body) {
		this.body = body;
	}
}
